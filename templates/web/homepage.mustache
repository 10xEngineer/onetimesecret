{{>header}}

  {{^actionable_visitor}}
  <div class="jumbotron">
    <h2 class="intro">Return to <a href="{{subdomain.homepage}}">{{subdomain.company_domain}}</a></h2>
  </div>
  {{/actionable_visitor}}

  {{#actionable_visitor}}
  <div class="jumbotron">
    {{^authenticated}}
    <h1 class="">Paste a password, secret phrase, or private link below</h1>
    <p class="lead">Keep sensitive info out of your email and chat logs.</p>
    {{/authenticated}}
    <form id="createSecret" method="post" autocomplete="off" action="/">
      {{{add_shrimp}}}
      <fieldset>
        <textarea rows="7" class="btn-block" name="secret" autocomplete="off" placeholder=""></textarea>
        <button class="btn btn-large btn-block btn-custom cufon" type="submit">Create a secret link*</button>
      </fieldset>
    </form>
    <form id="generateSecret" method="post" autocomplete="off" action="/">
      <fieldset>
        <button class="btn btn-block cufon" type="submit">Or generate a random password</button>
      </fieldset>
    </form>
    <hr/>
    <p class="hint">* A secret link only works once and then disappears forever.</p>
    {{^authenticated}}
    <p class="more">Sign up for a <a href="#">free account</a> to set passphrases for extra security along with additional privacy options. We'll even email the link for you if you want.</p>
    {{/authenticated}}
    <!--<hr/>-->
  </div>

